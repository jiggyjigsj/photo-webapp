<h2>Edit Profile</h2>
<form action="/contacts" method="post">
  <div class="form-group">
    <fieldset>
      <label class="form-label mt-4" for="readOnlyInput">Username</label>
      <input class="form-control" id="readOnlyInput" type="text" placeholder="<%= @username %>" readonly>
    </fieldset>
    <fieldset>
      <label class="form-label mt-4">Password</label>
      <input class="form-control" type="password" name="password" required value="Not gonna update right now!"></label>
      <small id="emailHelp" class="form-text text-muted">  Not gonna update right now!</small>
    </fieldset>
    <fieldset>
      <label class="form-label mt-4">Name</label>
      <input class="form-control" type="text" name="name" required value="<%= @name %>"></label>
    </fieldset>
    <fieldset>
      <label class="form-label mt-4">Email</label>
      <input class="form-control" type="text" name="email" required value="<%= @email %>"></label>
    </fieldset>
    <fieldset>
      <label class="form-label mt-4">Phone</label>
      <input class="form-control" type="text" name="phone" required value="<%= @phone %>"></label>
    </fieldset>
  </div>
  <button type="submit" class="btn btn-info">Submit</button>
</form>
